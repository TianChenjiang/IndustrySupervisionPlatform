.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.input {
  width: 60%;
  margin-bottom:30rpx;
  margin-left: 20rpx;
  border-bottom:1px solid #eee;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 20rpx;
}

.IDInput{
  width: 90%;
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding-bottom: 20rpx;
